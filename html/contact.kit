            <div class="contact-site__form-box">
                <label for="name">Imię i nazwisko:</label>
                <input type="text" id="name" name="name" required placeholder="Podaj imię i nazwisko">
                <p class="contact-site__error"></p>
            </div>
            <div class="contact-site__form-box">
                <label for="email">Adres email:</label>
                <input type="email" id="email" name="email" required placeholder="Podaj swój adres email">
                <p class="contact-site__error"></p>
            </div>
            <div class="contact-site__form-box">
                <label for="msg">Wiadomość:</label>
                <textarea name="msg" id="msg" required placeholder="Wpisz treść swojej wiadomości"></textarea>
                <p class="contact-site__error"></p>
            </div>

            <button class="contact-site__button">Wyślij</button>


            <div class="contact-site__msg-status">
                <p>
                    Twoja wiadomość została wysłana poprawnie!
                </p>
                <button class="contact-site__close-btn">Zamknij</button>
            </div>
        </form>
    </div>

